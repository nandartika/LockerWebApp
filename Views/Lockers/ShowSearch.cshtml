@model LockerWebApp.Models.Locker

<h4>Find Locker Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">
            <div class="form-group">
                <label for="SearchFloor" class="control-label"></label>
                <input name="SearchFloor" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if (Model != null)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Floor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Floor)
            </dd>
        </dl>
    </div>
}
